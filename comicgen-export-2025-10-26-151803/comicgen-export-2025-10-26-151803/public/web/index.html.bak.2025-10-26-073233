    <script>
        // ====== ä»…æ¥å…¥æ¥å£ï¼šä¿æŒä½ åŸæœ‰å¸ƒå±€ä¸å˜ ======
        const API = '/api';
        let STOP = false; // é¢„ç•™åœæ­¢å¹¶å‘çš„å¼€å…³ï¼ˆå¦‚éœ€ï¼‰

        // å·¥å…·å‡½æ•°
        const $ = sel => document.querySelector(sel);
        const esc = s => String(s??'').replace(/[&<>"]/g,m=>({ '&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;' }[m]));
        async function postJSON(path, body){
            const r = await fetch(API+path,{ method:'POST', headers:{'Content-Type':'application/json'}, body:JSON.stringify(body) });
            if(!r.ok){ throw new Error(await r.text()); }
            return r.json();
        }
        function digPanels(sb){
            const list=[]; (sb.pages||[]).forEach((p)=>{ (p.panels||[]).forEach(g=> list.push({ id:g.id, desc:g.desc||'' }) ); });
            return list;
        }
        async function runPool(limit, tasks){
            let i=0;
            async function worker(){
                while(true){
                    if(STOP) break;
                    const cur=i++; if(cur>=tasks.length) break;
                    try{ await tasks[cur](); }catch(_){/*å•æ ¼å¤±è´¥ä¸å½±å“å…¶ä»–*/ }
                }
            }
            await Promise.all(Array.from({length:Math.min(limit,tasks.length)},()=>worker()));
        }

        // é£æ ¼é€‰æ‹©åŠŸèƒ½ï¼ˆä¿æŒï¼‰
        document.querySelectorAll('.style-option').forEach(option => {
            option.addEventListener('click', function() {
                document.querySelectorAll('.style-option').forEach(opt => opt.classList.remove('active'));
                this.classList.add('active');
            });
        });

        // ç”ŸæˆæŒ‰é’®åŠŸèƒ½ â€”â€” æ”¹ä¸ºçœŸå®è°ƒç”¨åç«¯æ¥å£
        document.querySelector('.generate-btn').addEventListener('click', async function() {
            const textarea = document.querySelector('.input-area textarea');
            const text = textarea.value.trim();
            if (text === '') {
                alert('è¯·è¾“å…¥å°è¯´å†…å®¹');
                return;
            }

            // é€‰ä¸­çš„é£æ ¼åç§°ï¼ˆä¸æ”¹ä½ çš„DOMï¼‰
            const active = document.querySelector('.style-option.active');
            const styleName = (active ? active.textContent.trim() : 'é»‘ç™½çº¿ç¨¿');

            // ä¸ºä¸åŒé£æ ¼å‡†å¤‡ç»Ÿä¸€ç”»é£å‰ç¼€ï¼ˆä¸æ–°å¢UIï¼‰
            const stylePrefixMap = {
                'æ—¥å¼æ¼«ç”»': 'anime style, clean line art, soft lighting',
                'ç¾å¼æ¼«ç”»': 'american comic style, bold inking, halftone dots',
                'é»‘ç™½çº¿ç¨¿': 'black and white manga, line art, screentone, high contrast, dramatic lighting',
                'æ°´å½©é£æ ¼': 'watercolor painting, soft pastel colors'
            };
            const prefix = stylePrefixMap[styleName] || 'black and white manga, line art, screentone, high contrast, dramatic lighting';

            // æ˜¾ç¤ºåŠ è½½çŠ¶æ€ï¼ˆä¿ç•™ä½ çš„æŒ‰é’®ï¼‰
            const button = this;
            const originalText = button.textContent;
            button.textContent = 'ç”Ÿæˆä¸­...';
            button.disabled = true;
            STOP = false;

            try{
                // 1) è°ƒåˆ†é•œ
                const sbRes = await postJSON('/storyboard', { text, style: styleName });
                const sb = JSON.parse(sbRes.storyboard_json || '{}');
                const panels = digPanels(sb);
                if(!panels.length){
                    alert('åˆ†é•œä¸ºç©ºï¼Œè¯·å°è¯•æ›´è¯¦ç»†çš„æ–‡æœ¬');
                    return;
                }

                // 2) å±•ç¤ºå®¹å™¨ï¼ˆä¿æŒä½ çš„ç»“æ„ï¼‰
                const resultArea = document.querySelector('.result-area');
                const panelsWrap = document.querySelector('.comic-panels');
                resultArea.style.display = 'block';
                panelsWrap.innerHTML = '';

                // å…ˆæ¸²æŸ“å ä½
                panels.forEach((p,idx)=>{
                    const cell = document.createElement('div');
                    cell.className = 'comic-panel';
                    cell.innerHTML = `
                        <div class="panel-image" id="panel-img-${idx}">ç”Ÿæˆä¸­...</div>
                        <div class="panel-text">${esc(p?.id ?? (idx+1))}ï¼š${esc(p.desc)}</div>
                    `;
                    panelsWrap.appendChild(cell);
                });

                // 3) å‰ç«¯å¹¶å‘é€æ ¼ç”Ÿæˆå›¾ç‰‡ï¼ˆä¸æ”¹ä½ çš„å¸ƒå±€ï¼‰
                const size = '1024x1024';       // å›ºå®šå°ºå¯¸ï¼ˆä¸æ–°å¢æ§ä»¶ï¼‰
                const concurrency = 3;          // å›ºå®šå¹¶å‘ï¼ˆä¸æ–°å¢æ§ä»¶ï¼‰

                const tasks = panels.map((p,idx)=> async ()=>{
                    const prompt = `${prefix} ${p.desc}`.trim();
                    try{
                        const img = await postJSON('/image', { prompt, size });
                        const el = document.getElementById(`panel-img-${idx}`);
                        if(el){
                            el.innerHTML = `
                                <a href="${img.url}" target="_blank" style="display:block; font-size:12px; margin-bottom:6px">${img.url}</a>
                                <img loading="lazy" src="${img.url}" alt="panel-${idx}" style="max-width:100%;height:auto">
                            `;
                        }
                    }catch(e){
                        const el = document.getElementById(`panel-img-${idx}`);
                        if(el){ el.innerHTML = `<span style="color:#e11d48">å¤±è´¥ï¼š</span><span style="color:#6b7280;font-size:12px">${esc(e.message||'error')}</span>`; }
                    }
                });

                await runPool(concurrency, tasks);

                // æ»šåŠ¨è‡³ç»“æœåŒºåŸŸ
                resultArea.scrollIntoView({ behavior: 'smooth' });

            }catch(err){
                alert('ç”Ÿæˆå¤±è´¥ï¼š' + (err.message || String(err)));
            }finally{
                button.textContent = originalText;
                button.disabled = false;
            }
        });
    </script>
</body>
</html>
